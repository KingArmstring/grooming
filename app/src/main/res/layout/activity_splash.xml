<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/post_background">
<!--The main root layout is the ConstraintLayout-->

<!--    I am using the lib ParticleView which allows me to this nice animation splashScreen-->
<!--    We just need to set the different values of the fields and we have a nice professional animation-->
<!--    Like the time of animation, texts colors, ...etc-->

    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/pv_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:pv_background_color="@color/white"
        app:pv_host_text="GROOMING"
        app:pv_host_text_size="33sp"
        app:pv_particle_text="dogs"
        app:pv_particle_text_size="28sp"
        app:pv_text_color="@color/black"
        app:pv_text_anim_time="3000"
        app:pv_spread_anim_time="2000"
        app:pv_host_text_anim_time="3000" />



</androidx.constraintlayout.widget.ConstraintLayout>